# Configuración de API de OpenWeatherMap
# Obtén tu clave gratuita en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_clave_api_aqui

# Configuración de Base de Datos SQL Server
DB_SERVER=tu_servidor
DB_DATABASE=tu_base_de_datos
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_contraseña
DB_DRIVER=SQL Server
DB_TRUST_CERTIFICATE=yes
DB_TIMEOUT=30

# Configuración de la aplicación
APP_DEBUG=False
APP_PORT=8501

# Configuración de modelos ML (rutas relativas al directorio raíz del proyecto)
MODEL_PATH=models/modelo_lluvia_lstm.h5
SCALER_PATH=models/scaler_lstm.pkl

# Configuración de ubicaciones por defecto (Culiacán, México)
DEFAULT_LATITUDE=25.685194
DEFAULT_LONGITUDE=-109.080806
